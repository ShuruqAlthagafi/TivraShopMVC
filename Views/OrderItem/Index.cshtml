@model IEnumerable<OrderItem>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">OrderItem</h1>

<div class="container">
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-outline-primary">Add New OrderItem</a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Order</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>UnitPrice</th>
                <th>TotalAmount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model)
            {
                <tr>
                    <td>@orderItem.Id</td>
                    <td>@orderItem.Order?.Client?.FullName</td>
                    <td>@orderItem.Product?.Name</td>
                    <td>@orderItem.Quantity</td>
                    <td>@orderItem.UnitPrice.ToString("N2") SAR</td>
                    <td>@($"{orderItem.Quantity * orderItem.UnitPrice:N2} SAR")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@orderItem.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@orderItem.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
