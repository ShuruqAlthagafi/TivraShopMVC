@model OrderItem
@{
    ViewData["Title"] = "Create";
}

<h1>Add OrderItem</h1>

<form method="post" asp-action="Create">

    <div class="mb-3">
        <label asp-for="OrderId" class="form-label"></label>
        <select asp-for="OrderId" class="form-control" asp-items="@ViewBag.Orders">
            <option disabled selected value="">-- Select Order --</option>

        </select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductId" class="form-label"></label>
        <select asp-for="ProductId" class="form-control" asp-items="@ViewBag.Products">
            <option disabled selected value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" type="number" class="form-control" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>



    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label"></label>
        <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a asp-action="Index" class="btn btn-dark">Back</a>
</form>
