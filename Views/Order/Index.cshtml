@model IEnumerable<Order>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Order</h1>

<div class="container">
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-outline-primary">Add New Order</a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>OrderDate</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Client?.FullName</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
